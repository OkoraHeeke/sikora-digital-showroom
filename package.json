{
  "name": "sikora-digital-showroom",
  "version": "1.0.0",
  "description": "SIKORA Digital Showroom - Linienkonfigurator mit Datenbank-Integration",
  "main": "electron/main.js",
  "homepage": "./",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives",
    "preview": "vite preview",
    "db:init": "cd DB && node init_database.js",
    "db:server": "cd DB && node api-server.js",
    "backend:test": "node test-database.js",
    "backend:start": "node start-backend.js",
    "backend:fix": "npm run backend:test && npm run backend:start",
    "electron": "electron .",
    "electron:dev": "concurrently \"npm run dev\" \"npm run db:server\" \"electron .\"",
    "build:electron": "npm run build && electron-builder && node electron/copy-db.js",
    "build:electron-new": "npm run build && electron-builder -c.electronDirectory=electron-new && node electron/copy-db.js",
    "electron:new": "cross-env NODE_ENV=development electron electron/main-new.js",
    "electron:dev-new": "concurrently \"npm run dev\" \"electron electron/main-new.js\"",
    "electron:robust": "cross-env NODE_ENV=development electron electron/main-robust.js",
    "electron:dev-robust": "concurrently \"npm run dev\" \"electron electron/main-robust.js\"",
    "quick-test": "node quick-test.js",
    "dist": "electron-builder --publish=never",
    "fix-app": "node fix-installed-app.js"
  },
  "dependencies": {
    "@react-three/drei": "^9.88.13",
    "@react-three/fiber": "^8.15.11",
    "better-sqlite3": "^11.10.0",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "lucide-react": "^0.292.0",
    "multer": "^1.4.5-lts.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "serverless-http": "^3.2.0",
    "sqlite3": "^5.1.6",
    "three": "^0.158.0"
  },
  "devDependencies": {
    "@types/react": "^18.2.37",
    "@types/react-dom": "^18.2.15",
    "@types/three": "^0.158.0",
    "@typescript-eslint/eslint-plugin": "^6.10.0",
    "@typescript-eslint/parser": "^6.10.0",
    "@vitejs/plugin-react": "^4.1.0",
    "autoprefixer": "^10.4.16",
    "concurrently": "^9.1.2",
    "cross-env": "^7.0.3",
    "electron": "^36.4.0",
    "electron-builder": "^26.0.12",
    "eslint": "^8.53.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.4",
    "postcss": "^8.4.31",
    "tailwindcss": "^3.3.5",
    "typescript": "^5.2.2",
    "vite": "^4.5.0"
  },
  "build": {
    "appId": "com.sikora.digital-showroom",
    "productName": "SIKORA Digital Showroom",
    "asar": false,
    "directories": {
      "output": "dist-electron-new"
    },
    "files": [
      "dist/**/*",
      "electron/main-new.js",
      "electron/database.js",
      "electron/ipc-handlers.js",
      "electron/preload.js",
      "database.sqlite",
      "!node_modules/**/*",
      "node_modules/better-sqlite3/**/*"
    ],
    "extraResources": [
      {
        "from": "database.sqlite",
        "to": "app/database.sqlite"
      },
      {
        "from": "assets/",
        "to": "app/assets/"
      }
    ],
    "win": {
      "target": "nsis"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    }
  }
}

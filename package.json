{
  "name": "sikora-digital-showroom",
  "version": "1.0.0",
  "description": "SIKORA Digital Showroom - Linienkonfigurator mit Datenbank-Integration",
  "author": {
    "name": "SIKORA AG",
    "email": "info@sikora.net"
  },
  "license": "UNLICENSED",
  "private": true,
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "build:watch": "tsc && vite build --watch",
    "build:analyze": "tsc && vite build --mode analyze",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "eslint . --ext ts,tsx --fix",
    "type-check": "tsc --noEmit",
    "preview": "vite preview",
    "test": "echo \"No tests specified\" && exit 0",
    "clean": "rimraf dist node_modules/.vite",
    "clean:all": "rimraf dist node_modules",
    "db:init": "cd DB && node init_database.js",
    "db:server": "cd DB && node api-server.js",
    "db:backup": "cp database.sqlite database-backup-$(date +%Y%m%d-%H%M%S).sqlite",
    "db:test": "node test-database.js",
    "backend:test": "node test-database.js",
    "backend:start": "node start-backend.js",
    "backend:fix": "npm run backend:test && npm run backend:start",
    "backend:restart": "pkill -f api-server.js && npm run backend:start",
    "start": "npm run dev",
    "start:backend": "npm run backend:start",
    "setup": "npm ci && npm run db:init",
    "setup:dev": "npm install && npm run db:init",
    "version:patch": "npm version patch",
    "version:minor": "npm version minor",
    "version:major": "npm version major",
    "quick-test": "node quick-test.js",
    "update-models": "node update-3d-models.js"
  },
  "dependencies": {
    "@react-three/drei": "^9.88.13",
    "@react-three/fiber": "^8.15.11",
    "better-sqlite3": "^11.10.0",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "framer-motion": "^10.16.16",
    "lucide-react": "^0.292.0",
    "multer": "^1.4.5-lts.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "serverless-http": "^3.2.0",
    "sqlite3": "^5.1.6",
    "three": "^0.158.0"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.8",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/multer": "^1.4.11",
    "@types/node": "^20.10.0",
    "@types/react": "^18.2.37",
    "@types/react-dom": "^18.2.15",
    "@types/three": "^0.158.0",
    "@typescript-eslint/eslint-plugin": "^6.10.0",
    "@typescript-eslint/parser": "^6.10.0",
    "@vitejs/plugin-react": "^4.1.0",
    "autoprefixer": "^10.4.16",
    "eslint": "^8.53.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.4",
    "postcss": "^8.4.31",
    "rimraf": "^6.0.1",
    "tailwindcss": "^3.3.5",
    "terser": "^5.42.0",
    "typescript": "^5.2.2",
    "vite": "^4.5.0",
    "vite-bundle-analyzer": "^0.7.0"
  }
}
